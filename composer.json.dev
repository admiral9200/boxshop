{
	"name": "tortuvshin/shop-core",
	"description": "Laravel e-commerce Application.",
	"keywords": ["ecommerce", "laravel", "virtual store", "store", "php"],
	"minimum-stability": "dev",
	"homepage": "http://shop-core.mn",
	"license": "MIT",
	"type": "project",
	"authors": [
		{
			"name": "Tortuvshin Byambaa",
			"email": "toroo.byamba@gmail.com"
		}
	],
	"support": {
		"issues": "https://github.com/tortuvshin/shop-core/issues",
		"source": "https://github.com/tortuvshin/shop-core"
	},
	"require": {
		"php": ">=5.6.4",
        "laravel/framework": "5.4.*",
		"laravelcollective/html": "5.4.*",
		"intervention/image": "2.*",
		"greggilbert/recaptcha": "2.*",
		"barryvdh/laravel-dompdf": "0.*",
		"barryvdh/laravel-debugbar": "2.*",
		"predis/predis": "^1.0",
		"davejamesmiller/laravel-breadcrumbs": "3.*",
		"milon/barcode": "5.*",
		"antvel/shop": "dev-master",
		"laravel/tinker": "~1.0",
		"laravel/dusk": "^1.0"
	},
	"require-dev": {
		"friendsofphp/php-cs-fixer": "^1.10",
		"symfony/dom-crawler": "~3.0",
		"symfony/css-selector": "~3.0",
		"fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.7"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan optimize",
			"php artisan clear-compiled"
		],
		"post-root-package-install": [
			"php -r \"copy('.env.example', '.env');\""
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}