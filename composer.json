{
	"name": "tortuvshin/bella.mn",
	"description": "Bella",
	"keywords": ["ecommerce", "laravel","beaty store","store"],
	"homepage": "http://bella.mn/",
	"license": "MIT",
	"type": "project",
	"authors": [
		{
			"name": "Tortuvshin Byambaa",
			"email": "toroo.byamba@gmail.com"
		}
	],
	"support": {
		"issues": "https://github.com/tortuvshin/bella.mn/issues",
		"source": "https://github.com/tortuvshin/bella.mn"
	},
	"require": {
		"php": ">=5.6.4",
        "laravel/framework": "5.3.*",
		"doctrine/dbal": "^2.5",
		"laravelcollective/html": "5.3.*",
		"fzaninotto/faker": "^1.5",
		"laravel/socialite": "^2.0",
		"intervention/image": "^2.3",
		"greggilbert/recaptcha": "dev-master@dev",
		"barryvdh/laravel-dompdf": "0.7.*",
		"barryvdh/laravel-debugbar": "^2.0",
		"predis/predis": "^1.0",
		"davejamesmiller/laravel-breadcrumbs": "^3.0",
		"milon/barcode": "^5.2"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"friendsofphp/php-cs-fixer": "^1.10",
		"mockery/mockery": "^0.9.4",
		"barryvdh/laravel-ide-helper": "^2.1",
		"symfony/dom-crawler": "~3.0",
		"symfony/css-selector": "~3.0"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"App\\Tests\\": "tests/"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan optimize",
			"php artisan clear-compiled"
		],
		"post-root-package-install": [
			"php -r \"copy('.env-example', '.env');\""
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
